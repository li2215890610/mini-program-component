/* pages/plan/confirm/confirm.wxss */
@import '../../../font/stylesheet.wxss';

.plan-confirm-container {
  padding: 20rpx 36rpx 310rpx 38rpx;
  box-sizing: border-box;
}

.confirm-title {
  font-size: 44rpx;
  font-family: PingFangSC-Semibold;
  font-weight: 600;
  color: rgba(0, 0, 0, 1);
  line-height: 60rpx;
  padding: 20rpx 0;
  border-bottom: solid 2rpx rgba(241, 240, 241, 1);
}

.confirm-self_title, .confirm-who_title {
  padding: 40rpx 0 12rpx;
}

.confirm-self_title>text:nth-of-type(1), .confirm-who_title>text:nth-of-type(1) {
  display: inline-block;
  width: 60rpx;
  height: 60rpx;
  background: rgba(41, 60, 122, 1);
  border-radius: 50%;
  font-size: 36rpx;
  font-family: PingFangSC-Semibold;
  font-weight: 600;
  color: rgba(255, 255, 255, 1);
  line-height: 60rpx;
}

.confirm-self_title>text:nth-of-type(2), .confirm-who_title>text:nth-of-type(2) {
  display: inline-block;
  font-size: 32rpx;
  font-family: PingFangSC-Semibold;
  font-weight: 600;
  color: rgba(0, 0, 0, 1);
  line-height: 44rpx;
  margin-left: 20rpx;
}

.confirm-self_info {
  background: rgba(242, 243, 245, 1);
  padding: 28rpx 30rpx;
  color: rgba(0, 0, 0, 1);
}

.confirm-self_info>view:nth-of-type(1) {
  font-size: 36rpx;
  font-family: PingFangSC-Semibold;
  font-weight: 600;
  line-height: 50rpx;
}

.confirm-self_info>view:nth-of-type(2), .confirm-self_info>view:nth-of-type(3) {
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  line-height: 46rpx;
}

.confirm-who_info {
  margin-bottom: 20rpx;
}

.confirm-who_info:nth-last-of-type(1) {
  margin-bottom: 0;
}

.confirm-who_info .who_info_base {
  padding: 16rpx 30rpx;
  box-sizing: border-box;
  background: rgba(242, 243, 245, 1);
  flex-grow: 1;
  width: 70%;
}

.confirm-who_info .who_info_base>view:nth-of-type(1)>text:nth-of-type(1) {
  font-size: 36rpx;
  font-family: PingFangSC-Semibold;
  font-weight: 600;
  color: rgba(0, 0, 0, 1);
  line-height: 50rpx;
  margin-right: 25rpx;
}

.confirm-who_info .who_info_base .icon-cert {
  display: inline-block;
  width: 22rpx;
  height: 27rpx;
  background: url(data:image/png;base64,) no-repeat;
  background-size: 100% 100%;
}

.confirm-who_info .who_info_base>view:nth-of-type(1)>text:nth-last-of-type(1) {
  font-size: 36rpx;
  font-family: PingFangSC-Semibold;
  font-weight: 600;
  color: rgba(0, 0, 0, 1);
  line-height: 50rpx;
  margin-left: 2rpx;
}

.confirm-who_info .who_info_base>view:nth-of-type(2) {
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(0, 0, 0, 1);
  line-height: 46rpx;
}

.confirm-who_info .who_info_money {
  padding: 32rpx 0;
  background: rgba(41, 60, 122, 1);
  flex-grow: 1;
  width: 30%;
  overflow: hidden;
}

.confirm-who_info .who_info_money .money-num {
  font-size: 40rpx;
  font-family: PingFangSC-Semibold;
  font-weight: 600;
  color: rgba(255, 255, 255, 1);
  line-height: 56rpx;
}

.confirm-who_info .who_info_money .money-discount {
  background: rgba(204, 182, 123, 1);
  width: 65%;
  height: 50%;
  right: -18%;
  top: -16%;
  transform: rotate(34deg);
}

.confirm-who_info .who_info_money .money-discount text {
  display: inline-block;
  font-size: 20rpx;
  font-family: PingFangSC-Semibold;
  font-weight: 600;
  color: rgba(41, 60, 122, 1);
  line-height: 28rpx;
  top: 10rpx;
  transform: rotate(-34deg);
  left: 8rpx;
}

.confirm-who_desc {
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  line-height: 40rpx;
  margin: 26rpx 0 42rpx;
}

.confirm-who_desc>text {
  color: rgba(0, 0, 0, 1);
}

.confirm-who_desc>navigator {
  color: rgba(74, 144, 226, 1);
}

/* 优惠选择 */

.plan-confirm_discount {
  bottom: 220rpx;
  left: 0;
  width: 100%;
  padding: 24rpx 20rpx 24rpx 26rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(0, 0, 0, 1);
  line-height: 40rpx;
  border-top: solid 2rpx rgba(241, 240, 241, 1);
  background: rgba(255, 255, 255, 1);
}

.plan-confirm_check {
  bottom: 120rpx;
  left: 0;
  width: 100%;
  background: rgba(255, 255, 255, 1);
  font-family: PingFangSC-Regular;
  font-weight: 400;
  padding: 28rpx 56rpx;
  border-top: solid 2rpx rgba(241, 240, 241, 1);
}

.plan-confirm_check .icon-check {
  margin-right: 20rpx;
  width: 36rpx;
  height: 36rpx;
  border-radius: 8rpx;
  border: 2rpx solid rgba(151, 151, 151, 1);
}

.plan-confirm_check .icon-check text {
  width: 24rpx;
  height: 24rpx;
  background: rgba(41, 60, 122, 1);
  border-radius: 8rpx;
}

.plan-confirm_check .icon-check~text {
  font-size: 24rpx;
  color: rgba(30, 30, 30, 1);
  line-height: 34rpx;
  margin-right: 40rpx;
}

.plan-confirm_check .check_protocol {
  font-size: 20rpx;
  color: rgba(74, 144, 226, 1);
  line-height: 28rpx;
}

.plan-confirm_check .check_protocol>text {
  margin: 0 8rpx;
}

.plan-submit {
  width: 100%;
  height: 120rpx;
  bottom: 0;
  left: 0;
  background: rgba(255, 255, 255, 1);
  z-index: 2;
  border-top: solid 2rpx rgba(241, 240, 241, 1);
}

.plan-submit>view {
  line-height: 120rpx;
}

.plan-submit>view:nth-of-type(1) {
  padding: 0 64rpx 0 68rpx;
  box-sizing: border-box;
}

.plan-submit.active>view:nth-of-type(1) {
  padding: 0 40rpx;
}

.plan-submit>view:nth-of-type(1) .amount-num {
  font-size: 48rpx;
  font-family: Agency FB;
  color: rgba(30, 30, 30, 1);
}

.plan-submit>view:nth-of-type(1) .amount-discount {
  font-family: AgencyFB-Bold;
  font-weight: bold;
  color: rgba(41, 60, 122, 1);
  line-height: 24rpx;
  background: rgba(204, 182, 123, 1);
  padding: 0 18rpx;
  box-sizing: border-box;
  border-radius: 28rpx;
  margin-left: 10rpx;
}

.plan-submit>view:nth-of-type(1) .amount-discount .discount-num {
  font-size: 24rpx;
}

.plan-submit>view:nth-of-type(1) .amount-discount .discount-txt {
  font-size: 16rpx;
}

.plan-submit>view:nth-of-type(2) {
  background: rgba(41, 60, 122, 1);
  font-size: 36rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  letter-spacing: 2rpx;
  flex-grow: 1;
}

.icon-arrow-right {
  display: inline-block;
  width: 16rpx;
  height: 16rpx;
  border-top: solid 2rpx rgba(0, 0, 0, 0.8);
  border-right: solid 2rpx rgba(0, 0, 0, 0.8);
  transform: rotate(45deg);
  position: relative;
  margin-left: 22rpx;
}

/* picker */

.picker-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
  background: rgba(0, 0, 0, 0.3);
  display: none;
}

.picker-container {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 750rpx;
  background: white;
  transform: translateY(150%);
  transition: all 0.4s ease;
  z-index: 11;
}

.picker-show .picker-container {
  transform: translateY(0);
}

.picker-show .picker-mask {
  display: block;
}

.picker-title {
  padding: 30rpx 36rpx;
  box-sizing: border-box;
  border-bottom: solid 2rpx rgba(213, 212, 213, 1);
}

.picker-title>view {
  font-size: 28rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(0, 0, 0, 1);
  line-height: 40rpx;
}

.picker-title>text {
  font-size: 60rpx;
  transform: rotate(45deg);
  color: rgba(74, 74, 74, 1);
  top: 4rpx;
  right: 24rpx;
}

.picker-discount {
  max-height: 800rpx;
}

.discount-item {
  padding: 34rpx 24rpx 34rpx 36rpx;
  box-sizing: border-box;
  border-bottom: solid 2rpx rgba(216, 216, 216, 1);
}

.discount-item:nth-last-of-type(1) {
  border-bottom: none;
}

.discount-item .item-desc {
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(41, 60, 122, 1);
  line-height: 40rpx;
}

.icon-discount-check {
  display: inline-block;
  width: 36rpx;
  height: 36rpx;
  border: 2rpx solid rgba(155, 155, 155, 1);
  border-radius: 50%;
}
