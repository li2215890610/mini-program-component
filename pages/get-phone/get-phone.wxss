.row {
  display: flex;
  padding: 0rpx 30rpx;
  border-bottom: 1px solid #f4f4f4;
  background: #fff;
  align-items: center;
  min-height: 100rpx;
}

.row .label {
  width: 130rpx;
  font-size: 30rpx;
  font-weight: bold;
  color: #222;
  flex-shrink: 0;
}

.row .value {
  flex: 1;
  margin: 20rpx;
  color: #444;
  font-size: 30rpx;
  display: flex;
  align-items: center;
}

.row .value input {
  flex: 1;
}

.row .iconfont {
  flex-shrink: 0;
  font-size: 30rpx;
  color: #999;
}

.get-phone-btn {
  margin: 0;
  padding: 0;
  border: none;
  background-color: #fff;
  font-size: 32rpx;
  line-height: inherit;
  text-align: left;
  border-radius: 0;
}

.get-phone-btn::after {
  border: none;
}

.phone-input {
  font-size: 26rpx;
  display: flex;
  align-items: center;
  margin-right: 10rpx;
}

.phone-select {
  font-size: 24rpx;
  text-align: center;
  justify-content: center;
  align-items: center;
  display: flex;
  color: #fff;
  background: #222;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
}
