page{
  background: #fff;
  display: flex;
  justify-content: center;
  width:90%;
  margin:0 auto;

}
.container{
  display: flex;
  justify-content: center;
  flex-direction: column;
}
.inputs{
  margin-bottom: 20rpx;
  font-size: 28rpx;
}
.form__item{
  border-bottom: solid 1PX #e5e5e5;
  height: 72rpx;
}
.input__label {
  min-width: 163rpx;
  height: 46rpx;
  line-height: 46rpx;
  color: #333;
}
.input__placeholder{
  font-size: 28rpx;
}
.submit{
  margin:0 auto;
  display: flex;
  justify-content: center;
}
.logo_con{
  display: flex;
  flex-direction: column;
  margin-bottom: 100rpx;
  justify-content: center;
  align-items: center;
}
.logo{
  width: 140rpx;
  height: 140rpx;
  margin-bottom: 20rpx;
}

.input-with-btn{
  display: flex;
  border-bottom:1rpx solid #f4f4f4;
  align-items:center;
}