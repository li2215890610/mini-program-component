.template-activity {
  width: 100%;
  padding: 40rpx 24rpx;
  box-sizing: border-box;
}

.template-activity swiper {
  height: 188rpx;
  width: 100%;
}

.template-activity swiper .slide-img-container {
  width: 100%;
  height: 100%;
  box-shadow: 0px 0px 20px 0px rgba(0, 0, 0, 0.05);
  border-radius: 8px;
}

.template-activity .dots {
  bottom: 60rpx;
  left: 72rpx;
  z-index: 2;
}

.template-activity .dots>view {
  width: 20rpx;
  height: 2rpx;
  background: rgba(255, 255, 255, 1);
  margin-right: 10rpx;
  opacity: 0.3;
}

.template-activity .dots>view:nth-last-of-type(1) {
  margin-right: 0;
}

.template-activity .dots>view.active {
  background: rgba(255, 255, 255, 1);
  opacity: 1;
}
