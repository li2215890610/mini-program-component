
.search-bar__container {
  position: relative;
  overflow: hidden;
  height: 30PX;
}

.search-bar__container {
  flex: 1;
  width: 100%;
  background-color: #f7f7f7;
  border-radius: 13PX;
}

.placeholder__box {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
  opacity: 1;
  display: flex;
  align-self: center;
  align-items: center;
  justify-content: center;
  vertical-align: middle;
  width: 100%;
  height: 30PX;
  line-height: 0;
  /* padding: 0 20PX; */
  transition: width 0.3s;
}

.placeholder--left {
  width: 70PX;
}

.placeholder__text {
  margin-left: 5PX;
  color: #999;
  font-size: 14PX;
  opacity: 1;
}

.placeholder__text--left {
  opacity: 0;
}

.bar__input {
  position: absolute;
  width: 100%;
  height: 30PX !important;
  top: 0;
  left: 0;
  display: block;
  font-size: 14PX !important;
  padding: 5PX 30PX;
  z-index: 700;
  transition: width 0.3s;
  text-align: left;
  box-sizing: border-box;
  color: #000;
  background-color: transparent;
}

.bar__clear {
  position: absolute;
  display: flex;
  align-items: center;
  justify-content: center;
  top: 0;
  right: 5PX;
  z-index: 700;
  height: 30PX;
  width: 25PX;
  line-height: 0;
  vertical-align: middle;
  opacity: 0;
  margin-right: -30PX;
}

.bar__clear view {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 30PX;
  width: 25PX;
}

.bar__clear--left {
  margin-right: 0;
  opacity: 1;
  transition: margin-right 0.3s, opacity 0.3s;
}
