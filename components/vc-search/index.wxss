.search-bar{
  padding: 0 20rpx;
}

.search-bar__container {
  position: relative;
  overflow: hidden;
  height: 70rpx;
  flex: 1;
  width: 100%;
  background-color: #f7f7f7;
  border-radius: 26rpx;
}
.icon-search{
  color: #bbbbbb;
}
.placeholder__box {
  padding-left: 20rpx;
  z-index: 1;
  opacity: 1;
  display: flex;
  align-self: center;
  align-items: center;
  justify-content: flex-start;
  vertical-align: middle;
  width: 100%;
  height: 70rpx;
  line-height: 0;
  transition: width 0.3s;
}



.bar__input {
  position: absolute;
  width: 100%;
  height: 70rpx ;
  top: 0;
  left: 0;
  display: block;
  font-size: 30rpx ;
  padding: 0 60rpx;
  z-index: 700;
  transition: width 0.3s;
  text-align: left;
  box-sizing: border-box;
  color: #000;
  background-color: transparent;
  margin-left: 10rpx;
  padding-right: 70rpx;
}

.bar__clear {
  position: absolute;
  display: flex;
  align-items: center;
  justify-content: center;
  top: 0;
  right: 10rpx;
  z-index: 700;
  height: 70rpx;
  width: 50rpx;
  line-height: 0;
  vertical-align: middle;
  opacity: 0;
  margin-right: -60rpx;
}

.bar__clear-view {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 70rpx;
  width: 50rpx;
}

.bar__clear--left {
  margin-right: 0;
  opacity: 1;
  transition: margin-right 0.3s, opacity 0.3s;
}
