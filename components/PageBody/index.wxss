.flex-row {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    box-sizing: border-box;
}

.page-body-scroll {
    background-color: #F2F2F2;
}

.no-more {
    font-size: 24rpx;
    color: #9EA8B4;
    margin: 40rpx 0 40rpx 0;
}

.no-more .line {
    border-top: 1px solid #ccc;
    width: 160rpx;
    margin: 0 20rpx;
}

.bottom-step {
    height: 0px;
    overflow: hidden;
    width: 100%;
    flex-shrink: 0;
    flex-grow: 0;
    padding-bottom: env(safe-area-inset-bottom);
}
