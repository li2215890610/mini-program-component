.curtain {
  display: block;
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: rgba(0, 0, 0, 0.3);
  z-index: 1090;
}

.curtain__container {
  display: flex;
  position: relative;
  width: 85%;
  height: 100%;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  margin: 0 auto;
  padding: 100px 0;
  opacity: 1;
}

.curtain__body {
  position: relative;
  overflow: visible;
  min-height: 70%;
  width: 100%;
}

.close__modal {
  color: red;
  font-weight: bold;
}

.close__circle {
  margin-top: 30px;
}
